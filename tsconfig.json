{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "outDir": "lib",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"],
    "types": ["jest", "node", "big.js"]
  },
  "include": ["src/**/*.ts"]
}
